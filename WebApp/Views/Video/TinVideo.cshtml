@model IEnumerable<WebApp.Core.EF.CMS_Videos>
@using WebApp.Common;


<div class="panel panel-default box-news">
    <div class="panel-heading">
       <a href="@Url.Content("~/video")">@ViewBag.TITLE</a>
    </div>
    <div class="panel-body">
        @if (Model != null && Model.Count() > 0)
        {
            <div class="row">
                <div class="col-xs-12">
                    <a title="@Model.FirstOrDefault().Name" href="@Utilities.UrlContent("video", @Model.FirstOrDefault().Name, "vd", @Model.FirstOrDefault().ID.ToString())">
                        <img src="@Model.FirstOrDefault().AvatarPicture" alt="@Model.FirstOrDefault().Name" />
                        @*<img src="@Utilities.SiteURL_Resources()@Model.FirstOrDefault().AvatarPicture" alt="@Model.FirstOrDefault().Name" />*@
                    </a>
                    <label>@Model.FirstOrDefault().Name</label>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <ul>
                        @foreach (var item in Model.Skip(1))
                        {
                            <li><a title="@item.Name" href="@Utilities.UrlContent("video", @item.Name, "vd", @item.ID.ToString())">@Utilities.ReturnSubString(90, @item.Name)</a></li>
                        }
                    </ul>
                </div>
            </div>
        }
    </div>
</div>