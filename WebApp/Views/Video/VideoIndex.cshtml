@model IEnumerable<WebApp.Core.EF.CMS_Videos>
@using WebApp.Common;


<div class="panel panel-default box-news">
    <div class="panel-heading">
        @ViewBag.TITLE
    </div>
    <div class="panel-body">
        <div class="row">
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-6 col-xs-12">
                        <a title="@item.Name" href="@Utilities.UrlContent("video", item.Name, "vd", item.ID.ToString())">
                            <img src="@item.AvatarPicture" alt="@item.Name" style="width: 100%; height: 120px;" />
                            @*<img src="@Utilities.SiteURL_Resources()@item.AvatarPicture" alt="@item.Name" style="width: 100%; height: 120px;" />*@
                        </a>
                        <a title="@item.Name" href="@Utilities.UrlContent("video", item.Name, "vd", item.ID.ToString())" style="cursor: pointer">
                            <label>@item.Name</label>
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</div>