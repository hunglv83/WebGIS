@model IEnumerable<WebApp.Core.EF.CMS_Photos>
@using WebApp.Common;


<div class="panel panel-default box-news">
    <div class="panel-heading">
        <a href="@Url.Content("~/hinh-anh")">@ViewBag.TITLE</a>
    </div>
    <div class="panel-body">
        @if (Model != null && Model.Count() > 0)
        {
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    @for (int i = 1; i < Model.Count(); i++)
                    {
                        <li data-target="#myCarousel" data-slide-to=@i></li>
                    }
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <a title="@Model.FirstOrDefault().Name" href="@Utilities.UrlContent("hinh-anh", "", "", "")?cate=@Model.FirstOrDefault().TypeOfPhotoID">
                            <img src="@Utilities.SiteURL_Resources()@Model.FirstOrDefault().FileName" alt="@Model.FirstOrDefault().Name" style="width: 100%;" />
                        </a>
                    </div>
                    @foreach (var item in Model.Skip(1))
                    {
                        <div class="item">
                            <a title="@item.Name" href="@Utilities.UrlContent("hinh-anh", "", "", "")?cate=@item.TypeOfPhotoID">
                                <img src="@Utilities.SiteURL_Resources()@item.FileName" alt="@item.Name" style="width:100%;" />
                            </a>
                        </div>
                    }
                </div>
                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        }
    </div>
</div>