@model IEnumerable<WebApp.Core.EF.TQG_HoSo>

<div class="col-xs-12 col-md-12 col-lg-12">
    <div class="box box-danger">
        <div class="box-header with-border">
            <h3 class="box-title"><i class="fa fa-print"></i> Thông tin chi tiết @Model.FirstOrDefault().TQG_Mo.TenMo</h3>
        </div>
        <div class="box-body">
            <div style="max-height: 500px; overflow-y: auto;">
                <table class="table tblDataSimple dataTable table-striped table-bordered table-hover nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên mỏ</th>
                            <th>Địa chỉ</th>
                            <th>Tổ chức, cá nhân</th>
                            <th>Diện tích</th>
                            <th>Năm BDKT</th>
                            <th>Loại khoáng sản</th>
                            <th>Tài liệu đính kèm</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 0;
                            var index = 0;
                        }
                        @foreach (var item in Model)
                        {
                            i++;
                            index = i;
                            <tr id="row_@item.MaHoSo">
                                <td align="center">@index</td>
                                <td>@item.TQG_Mo.TenMo</td>
                                <td>@item.ChuDauTu</td>
                                <td>@item.DiaChiChuDauTu</td>
                                <td>@item.DienTich</td>
                                <td>@item.LoaiKhoangSan</td>
                                <td>@item.TQG_Mo.NamBDKhaiThac</td>
                                <td align="center">
                                    <a href="#" onclick="return XemChiTiet('@item.TQG_Mo.MoId')" title="Xem chi tiết"><i class="fa fa-eye"></i> Chi tiết</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="divResultData2"></div>

@section jsFooter{
    <script src="@Url.Content("~/areas/admin/jscontroller/TQGCommon.js")"></script>
    <script>
        alert("hehe");
    </script>
}