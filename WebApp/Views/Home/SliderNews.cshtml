@model IEnumerable<WebApp.Core.EF.CMS_News_LayTinBaiCongKhaiTheoCateKey_Result>
@using WebApp.Common;
@if (Model != null && Model.Count() > 0)
{
    <div class="panel panel-default box-slider">
        <div class="panel-heading">
            @ViewBag.TITLE
        </div>
        <div class="panel-body">
            <div id="example5" class="slider-pro">
                <div class="sp-slides">
                    @foreach (var item in Model)
                    {
                        <div class="sp-slide">
                            <a title="@item.TITLE" href="@Utilities.UrlContent(@item.CateKey, @item.TITLE, "tt", @item.ID.ToString())">
                                <img class="sp-image" src="@Url.Content("~/Content/ImageGallery/images/blank.gif")"
                                     data-src="@Utilities.SiteURL_Resources()@item.PICTURE" />
                            </a>
                            <div class="sp-caption">@Utilities.ReturnSubString(150, item.EXCERPT)</div>
                        </div>
                    }
                </div>

                <div class="sp-thumbnails">
                    @foreach (var item in Model)
                    {
                        <div class="sp-thumbnail">
                            <div class="sp-thumbnail-image-container">
                                <img class="sp-thumbnail-image" src="@Utilities.SiteURL_Resources()@item.PICTURE" />
                            </div>
                            <div class="sp-thumbnail-text">
                                <div class="sp-thumbnail-title">@Utilities.ReturnSubString(150, item.TITLE)</div>
                                @*<div class="sp-thumbnail-description">Dolor sit amet, consectetur adipiscing</div>*@
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

}
<link href="@Url.Content("~/Content/ImageGallery/slider-pro.min.css")" rel="stylesheet" />
<link href="@Url.Content("~/Content/ImageGallery/examples.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/JSBase/jquery.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/JSBase/jquery.sliderPro.min.js")" type="text/javascript"></script>
@*<script src="@Url.Content("~/Scripts/jscontroller/slidernews.js")" type="text/javascript"></script>*@
<script type="text/javascript">
    jQuery('#example5').sliderPro({
        width: "100%",
        autoplay: true,
        orientation: 'vertical',
        loop: true,
        arrows: true,
        buttons: false,
        thumbnailsPosition: 'right',
        thumbnailPointer: true,
        thumbnailWidth: 290,
        breakpoints: {
            800: {
                thumbnailsPosition: 'bottom',
                thumbnailWidth: 270,
                thumbnailHeight: 100
            },
            500: {
                thumbnailsPosition: 'bottom',
                thumbnailWidth: 120,
                thumbnailHeight: 50
            }
        }
    });
    let w = jQuery("#example5 .sp-slides-container").eq(0).width() - 20;
    jQuery("#example5 .sp-caption-container").eq(0).width(w);
</script>