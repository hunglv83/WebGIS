@model IEnumerable<WebApp.Core.DAO.LichHop>
<div class="panel panel-default box-lichhop">
    <div class="panel-heading">
        @ViewBag.TITLE
    </div>
    <div class="panel-body">
        <div class="form-horizontal">
            <div class="form-group">
                <form action="@Url.Content(Request.Url.GetLeftPart(UriPartial.Path))" method="post" class="form-horizontal" style="margin-top: 15px;">
                    <div class="col-xs-6">
                        <div class="input-group">
                            <span class="input-group-addon">Ngày: </span>
                            <input type="text" class="form-control text-center" id="date" name="date" value="@ViewBag.DATE" />
                            <span class="input-group-addon"><i class="far fa-calendar-alt"></i></span>
                        </div>
                    </div>
                    <div class="col-xs-2">
                        <input type="submit" value="Xem" class="btn btn-default" />
                    </div>
                </form>
            </div>
            <div class="form-group">
                <div class="col-xs-12" style="overflow-x: auto;">
                    <hr/>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Thứ</th>
                                <th>Lãnh đạo</th>
                                <th>Chuyên viên</th>
                                <th>Lãnh đạo bộ</th>
                                <th>Giờ</th>
                                <th>Nội dung công việc</th>
                                <th>Địa điểm</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var data = item.data;
                                <tr>
                                    @if (data != null && data.Count > 0)
                                    {
                                        <td align="center" rowspan="@data.Count()">@item.thu<br />@item.ngay</td>
                                        foreach (var item1 in data)
                                        {
                                            <td data-name="leader">@item1.Leaders</td>
                                            <td>@item1.Participants</td>
                                            <td>@item1.Ministry_leaders</td>
                                            <td align="center">@Convert.ToDateTime(item1.StartDate).ToString("HH:mm")</td>
                                            <td>@item1.Title</td>
                                            <td align="center">@item1.Place</td>
                                            @:</tr><tr>
                                        }
                                    }
                                    else
                                    {
                                        <td align="center">@item.thu<br />@item.ngay</td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/scripts/jscontroller/lichhop.js")" type="text/javascript"></script>