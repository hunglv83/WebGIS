@model WebApp.Core.EF.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Cổng thông tin Địa chất khoáng sản tỉnh Quảng Ngãi | Đăng nhập hệ thống</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link href="@Url.Content("~/Content/LTE/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <!-- Font Awesome -->
    <link href="@Url.Content("~/Content/LTE/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="@Url.Content("~/Content/LTE/ionicons.min.css")" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="@Url.Content("~/Content/LTE/AdminLTE.min.css")" rel="stylesheet" type="text/css" />
    <!-- iCheck -->
    <link href="@Url.Content("~/Content/LTE/blue.css")" rel="stylesheet" type="text/css" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <img style="width: 150px" src="~/Images/monre1.png" class="img-circle">
            <h3 class="box-title"><b class="text-blue">ĐĂNG NHẬP HỆ THỐNG</b></h3>
        </div>
        <div class="login-box-body">
            <p class="login-box-msg">Đăng nhập để tiếp tục phiên làm việc của bạn</p>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
            {
                <input type="hidden" name="ReturnURL" id="ReturnURL" value="@ViewBag.RequestPath" />
                <div class="form-group has-feedback" style="margin-left: 0; margin-right: 0">
                    @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Tên đăng nhập" })
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group has-feedback" style="margin: 0; margin-right: 0">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">ĐĂNG NHẬP</button>
                    </div>
                </div>

            }
            <hr />
            <p class="mb-1">
                <a href="#">Quên mật khẩu?</a>
            </p>
            <p class="mb-0">
                <a href="@Url.Action("Register", "Home")" class="text-center">Đăng ký tài khoản mới</a>
            </p>
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="@Url.Content("~/Scripts/LTE/jquery.min.js")" type="text/javascript"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="@Url.Content("~/Scripts/LTE/bootstrap.min.js")" type="text/javascript"></script>
    <!-- iCheck -->
    <script src="@Url.Content("~/Scripts/LTE/icheck.min.js")" type="text/javascript"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' /* optional */
            });
        });
    </script>
</body>
</html>
