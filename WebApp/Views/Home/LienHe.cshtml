@model WebApp.Core.EF.CMS_Contact
@using WebApp.Core.EF
@using CaptchaMvc.HtmlHelpers
<script src="~/Scripts/JSBase/jquery.min.js"></script>
<div class="panel panel-default box-news">
    <div class="panel-heading">
        @ViewBag.abc
    </div>
    <div class="panel-body">
        <form action="@Url.Content(Request.Url.GetLeftPart(UriPartial.Path))" method="post" class="form-horizontal" style="margin-top: 15px;">
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="control-group row">
                        <div class="col-lg-3">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })<span class="text-danger"> *</span>
                        </div>
                        <div class="col-lg-9">
                            <input type="text" name="@Html.IdFor(model => model.Name)" id="@Html.IdFor(model => model.Name)" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-group row">
                        <div class="col-lg-3">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label" })<span class="text-danger"> *</span>
                        </div>
                        <div class="col-lg-3">
                            <input type="text" name="@Html.IdFor(model => model.Email)" id="@Html.IdFor(model => model.Email)" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-lg-2 col-lg-offset-1">
                            @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-lg-3">
                            <input type="text" name="@Html.IdFor(model => model.Mobile)" id="@Html.IdFor(model => model.Mobile)" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-group row">
                        <div class="col-lg-3">
                            @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class="col-lg-9">
                            <input type="text" name="@Html.IdFor(model => model.Address)" id="@Html.IdFor(model => model.Address)" class="form-control" />
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-group row">
                        <div class="col-lg-3">
                            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })<span class="text-danger"> *</span>
                        </div>
                        <div class="col-lg-9">
                            <input type="text" name="xTitle" id="xTitle" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-group row">
                        <div class="col-lg-3">
                            @Html.LabelFor(model => model.Contents, htmlAttributes: new { @class = "control-label" })<span class="text-danger"> *</span>
                        </div>
                        <div class="col-lg-9">
                            <textarea name="@Html.IdFor(model => model.Contents)" id="@Html.IdFor(model => model.Contents)" class="form-control" rows="15"></textarea>
                            @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="control-group row">
                        <div class="col-md-3">
                            <label class="control-label">Mã xác nhận:</label>
                        </div>
                        <div class="col-md-5">
                            @*@Html.Captcha(4)*@
                            @Html.Captcha("Làm mới", "Nhập mã xác nhận (Không phân biệt hoa thường)", 4, "Vui lòng nhập mã xác nhận", true)
                            <span class="text-danger">@ViewBag.CAPTCHA_ERR</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12 text-center">
                        <input type="submit" name="submit" value="Gửi thông tin" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


