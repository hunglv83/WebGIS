    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="@Url.Content("~/Images/monre1.png")" type="image/x-icon">
    <title> @ViewBag.Title </title>

    <!-- Font Awesome Icons -->
    <link href="~/wwwroot/adminlte3/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/wwwroot/adminlte3/plugins/fontawesome-free/css/all.min.css">
