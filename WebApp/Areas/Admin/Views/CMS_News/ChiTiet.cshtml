@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@model WebApp.Core.EF.CMS_News
@using WebApp.Core.EF
@using WebApp.Core.DAO
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default box-newsdetail">
            <div class="panel-body">
                @using (Html.BeginForm("ChiTiet", "CMS_News", FormMethod.Post, new { @id = "createNews" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <div class="control-group row">
                                    <div class="col-lg-2">
                                        @Html.LabelFor(model => model.TITLE, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-lg-10">
                                        @Html.Raw(Model.TITLE)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-group row">
                                    <div class="col-lg-2">
                                        @Html.LabelFor(model => model.EXCERPT, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-lg-10">
                                        @Html.Raw(Model.EXCERPT)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-2">
                                    @Html.LabelFor(model => model.ID_CATEGORIES, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-lg-10">
                                    @if (TempData["categories"] != null)
                                    {
                                        @TempData["categories"]
                                    }


                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-group row">
                                    <div class="col-lg-2">
                                        @Html.LabelFor(model => model.CONTENTS, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-lg-10">
                                        @Html.Raw(Model.CONTENTS)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="control-group row">
                                    <div class="col-lg-2">
                                        @Html.LabelFor(model => model.PICTURE, htmlAttributes: new { @class = "control-label" })
                                    </div>
                                    <div class="col-lg-10">
                                        <div style="width: 100px; height: 100px; display: inline-block;">
                                            <img id="pre_picture" style="width: 100%" src="@Url.Content(ViewBag.URLIMAGE + Html.ValueFor(m => m.PICTURE))" alt="Ảnh đại diện" />
                                        </div>
                                        @Html.TextBoxFor(model => model.PICTURE, new { @class = "form-control hidden" })

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>

    </div>
</div>
