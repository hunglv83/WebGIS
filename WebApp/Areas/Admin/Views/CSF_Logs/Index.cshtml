@model IEnumerable<WebApp.Core.EF.CSF_Logs_TheoTieuChi_Result>
@{
    ViewBag.Title = "QUẢN TRỊ LOG";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-users"></i> Danh sách log</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    @using (Html.BeginForm("Index", "CSF_Logs", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label" style="text-align: right;">Từ ngày</label>
                                    <div class="col-md-12">
                                        <input type="text" class="form-control" value="@ViewBag.datetimepicker1" id="datetimepicker1" name="datetimepicker1" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label" style="text-align: right;">Đến ngày</label>
                                    <div class="col-md-12">
                                        <input type="text" class="form-control" value="@ViewBag.datetimepicker2" name="datetimepicker2" id="datetimepicker2" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="control-label">&nbsp;</label>
                                    <div class="col-md-12">
                                        <button id="btnTimKiem" type="submit" class="btn btn-info" title="Tìm kiếm"><span class="fa fa-search"></span> Tìm kiếm</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <table id="tblData" class="table table-striped table-bordered table-hover nowrap" style="width:100%">
                            <thead>
                                <tr>
                                    <th class="text-center">STT</th>
                                    <th class="text-center">Chọn</th>
                                    <th class="text-center">Tên chức năng</th>
                                    <th class="text-center">Thời gian</th>
                                    <th class="text-center">Tên người dùng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var i = 0;
                                    var index = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    i++;
                                    index++;
                                    <tr id="row_@item.ID">
                                        <td align="center">@index</td>
                                        <td align="center"><input type="checkbox" value="@item.ID" name="chkXoa"></td>
                                        <td>@item.Name</td>
                                        <td align="center">@Convert.ToDateTime(item.CreateDate).ToString("HH:mm dd/MM/yyyy")</td>
                                        <td>@item.FullName</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        jQuery('#datetimepicker1').datetimepicker({ format: "DD/MM/YYYY" });
        jQuery('#datetimepicker2').datetimepicker({ format: "DD/MM/YYYY" });
    </script>
    <script src="@Url.Content("~/areas/admin/jscontroller/CSF_Logs.js")"></script>
}
