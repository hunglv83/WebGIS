@model WebApp.Core.EF.CSF_RoleFunction
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Cập nhật quyền
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Thông tin chức năng
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "QT_RoleFunction", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.RoleID, "Nhóm người dùng:", htmlAttributes: new { @class = "control-label col-lg-3" })
                                <div class="col-lg-9">
                                    @if (TempData["nhomNguoiDung"] != null)
                                    {
                                        @Html.DropDownList("RoleID", (SelectList)TempData["nhomNguoiDung"], new { @class = "form-control" })
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.FunctionID, "Chức năng:", htmlAttributes: new { @class = "control-label col-lg-3" })
                                <div class="col-lg-9">
                                    @if (TempData["chucNang"] != null)
                                    {
                                        @Html.DropDownList("FunctionID", (SelectList)TempData["chucNang"], new { @class = "form-control" })
                                    }
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-offset-3 col-lg-9">
                                    <input type="submit" value="Cập nhật" class="btn btn-primary" />
                                    <a class="btn btn-default" href="@Url.Content("~/Admin/QT_RoleFunction")">Quay lại</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
