@model IEnumerable<WebApp.Core.EF.CSF_Users>
@{
    ViewBag.Title = "QUẢN TRỊ NGƯỜI DÙNG";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-users"></i> Danh sách người dùng</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                        <div class="col-md-12">
                            <a class="btn btn-sm btn-success" title="Thêm mới" href="@Url.Content("~/Admin/QT_Users/Create")"><i class="fa fa-plus-square"></i> Thêm mới</a>
                        </div>
                    </div>
                <div class="form-group">
                        <div class="col-md-12">
                            <table id="tblData" class="table table-striped table-bordered table-hover nowrap" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="text-center">STT</th>
                                        <th class="text-center">Tài khoản</th>
                                        <th class="text-center">Họ và tên</th>
                                        <th class="text-center">Email</th>
                                        <th class="text-center">Trạng thái</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var i = 0;
                                        var index = 0;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        i++;
                                        index++;
                                        <tr id="row_@item.ID">
                                            <td align="center">@index</td>
                                            <td>@item.UserName</td>
                                            <td id="td_@item.ID">@item.FullName</td>
                                            <td>@item.Email</td>
                                            <td align="center">
                                                @{
                                                    if (Convert.ToInt16(item.Status) == 1)
                                                    { <span class="badge badge-success">Kích hoạt</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-danger">Khóa</span>
                                                    }
                                                }
                                            </td>
                                            <td align="center">
                                                <a href="@Url.Content("~/Admin/QT_Users/Edit/")@item.ID" type="button" title="Sửa"><span class="fa fa-edit text-info"></span></a>
                                                <a style="cursor: pointer" onclick="del(@item.ID)" title="Xóa"><span class="fa fa-trash-alt text-danger"></span></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="@Url.Content("~/areas/admin/jscontroller/QT_Users.js")"></script>
}
