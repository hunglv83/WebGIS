@model WebApp.Core.EF.DT_KhuVuc
@using WebApp.Core.DAO
@using WebApp.Core.EF

@{
    ViewBag.Title = "CẬP NHẬT KHU VỰC";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title"><i class="fa fa-users"></i> Thông tin khu vực</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    @using (Html.BeginForm("edit", "DT_KhuVuc", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Ten, "Tên khu vực", htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Ten, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Ten, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.MoTa, "Mô tả", htmlAttributes: new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.MoTa, new { @class = "form-control" })
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-save"></i> Lưu lại</button>
                            <a class="btn btn-sm btn-outline-info" href="@Url.Content("~/Admin/DT_KhuVuc/Index")"><i class="fa fa-reply"></i> Quay lại</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

}